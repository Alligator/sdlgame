{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "C++ Launch",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceRoot}/bin/Debug/engine",
      "args": ["+set fs_basepath ${workspaceRoot}"],
      "stopAtEntry": false,
      "cwd": "${workspaceRoot}/bin/Debug/",
      "environment": [],
      "externalConsole": false,
      "preLaunchTask": "config=debug_x64",
      "linux": {
        "MIMode": "gdb"
      },
      "osx": {
        "MIMode": "lldb"
      },
      "windows": {
        "MIMode": "gdb"
      }
    },
    {
      "name": "C++ Attach",
      "type": "cppdbg",
      "request": "attach",
      "program": "${workspaceRoot}/bin/Debug/game",
      "processId": "${command:pickProcess}",
      "linux": {
        "MIMode": "gdb"
      },
      "osx": {
        "MIMode": "lldb"
      },
      "windows": {
        "MIMode": "gdb"
      }
    }
  ]
}