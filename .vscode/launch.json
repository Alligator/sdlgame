{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceRoot}/bin/Debug/engine",
      "args": ["+set fs_basepath ${workspaceRoot}", "+set fs_game mybase"],
      "stopAtEntry": false,
      "cwd": "${workspaceRoot}/bin/Debug/",
      "environment": [],
      "externalConsole": true,
      "preLaunchTask": "config=debug_x64",
      "linux": {
        "MIMode": "gdb"
      },
      "osx": {
        "MIMode": "lldb"
      },
      "windows": {
        "type": "cppvsdbg",
        "program": "${workspaceRoot}/bin/Debug/engine.exe",   
        //"preLaunchTask": "build"
      }
    },
    {
      "name": "Attach",
      "type": "cppdbg",
      "request": "attach",
      "program": "${workspaceRoot}/bin/Debug/game",
      "processId": "${command:pickProcess}",
      "linux": {
        "MIMode": "gdb"
      },
      "osx": {
        "MIMode": "lldb"
      },
      "windows": {
        "MIMode": "gdb"
      }
    }
  ]
}