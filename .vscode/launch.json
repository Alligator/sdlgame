  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch (Debug)",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${workspaceRoot}/build/bin/Debug/engine.exe",   
      "preLaunchTask": "Build (Debug x64)",
      "args": ["+set fs_basepath ${workspaceRoot}"],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/build/bin/Debug/",
      "environment": [],
      "externalConsole": true
    },
    {
      "name": "Launch (Release)",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${workspaceRoot}/build/bin/Release/engine.exe",   
      "preLaunchTask": "Build (Release x64)",
      "args": ["+set fs_basepath ${workspaceRoot}"],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/build/bin/Release/",
      "environment": [],
      "externalConsole": true
    }
  ]
}